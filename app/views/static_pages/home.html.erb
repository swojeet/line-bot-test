<h1>Hi, Test App Here</h1>

<%= link_to 'Log In Using Line', 'https://access.line.me/oauth2/v2.1/authorize?response_type=code&client_id=1563433382&redirect_uri=https%3A%2F%2Flinebot-staging.herokuapp.com%2F&state=12345abcde&scope=openid%20profile' %>

<% if defined? (@response) %>
  <%= @response %>
  <h1>ACCESS TOKEN</h1>
  <%= @access_token %>
  <h1>ID Token</h1>
  <%= @id_token %>
  <h1>User Info</h1>
  <p>
    Id: <%= @user_info['userId'] %>
  </p>

  <p>
    User's Name: <%= @user_info['displayName'] %>
  </p>

  <p>
    <%= image_tag(@user_info['pictureUrl']) %>
  </p>

  <p>
    Status:
    <% if @user_info['statusMessage'] %>
      <%= @user_info['statusMessage'] %>
    <% end %>
  </p>
<% end %>
